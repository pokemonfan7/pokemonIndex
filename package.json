{
  "name": "pokemon-index",
  "version": "0.0.0",
  "scripts": {
    "reinstall": "rm -rf node_modules/ && npm i",
    "start": "ng serve --hmr --open --project=pokemonIndex --host 0.0.0.0 --port=4000 --proxy-config ./proxy.dev.conf.json",
    "build": "ng build --prod --project=pokemonIndex --aot --build-optimizer --extract-css && npm run package",
    "lint:style": "stylelint \"src/**/*.less\" --color",
    "lint": "ng lint --force --project=pokemonIndex",
    "package": "tar zcvf dist.tar.gz dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -x @commitlint/config-conventional -E HUSKY_GIT_PARAMS"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.0.3",
    "@angular/common": "^6.0.3",
    "@angular/compiler": "^6.0.3",
    "@angular/core": "^6.0.3",
    "@angular/forms": "^6.0.3",
    "@angular/http": "^6.0.3",
    "@angular/platform-browser": "^6.0.3",
    "@angular/platform-browser-dynamic": "^6.0.3",
    "@angular/router": "^6.0.3",
    "@ngxs/logger-plugin": "^3.2.0",
    "@ngxs/store": "^3.2.0",
    "core-js": "^2.5.4",
    "ng-lazyload-image": "^4.0.0",
    "rxjs": "^6.0.0",
    "stylelint": "^9.8.0",
    "stylelint-config-standard": "^18.2.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.8",
    "@angular/cli": "~6.0.8",
    "@angular/compiler-cli": "^6.0.3",
    "@angular/language-service": "^6.0.3",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.2.1",
    "husky": "^1.1.3",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.3.0",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2"
  }
}
